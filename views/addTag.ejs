<%include ./partials/pre-top.ejs %>
<%include ./partials/top.ejs %>

	<form action="/edit/addTag" method="POST">
		<input type="submit" disabled aria-hidden="true" hidden>
		<!--disabled first submit button to disable submit by pressing enter-->
		
		<div class="form-group row">
			<label class="col-sm-3 col-form-label">Tag Name</label>
			<div class="col-sm-9">
				<input type="text" name="tagname" class="form-control" placeholder="asdf_core_elective">
			</div>
		</div>

		
		<div class="form-group row">
			<div class="col-sm-3">Course List</div>
			<div class="col-sm-9">
				<% courseList.forEach(function(courseCode, index) { %>
					<div class="form-check form-check-inline">
						<label class="form-check-label">
							<input class="form-check-input" name="courseList[]" type="checkbox" value="<%= courseCode %>">
							<%= courseCode %>
						</label>
					</div>
				<% }); %>
				
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-9">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</div>

	</form>

<%include ./partials/bottom.ejs %>
