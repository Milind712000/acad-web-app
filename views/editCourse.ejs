<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="/static/css/bootstrap.min.css">

	<title>Hello, world!</title>
</head>

<body>
	<h1>Hello, world!</h1>
	<form method="POST" action="<%= ques.courseCode ? '/edit/editCourse' : '/edit/addCourse' %>" enctype="multipart/form-data">
		<label>
			Course Code
			<input type="text" name="code" value="<%= ques.courseCode || 'courseCode' %>" <%= ques.filename ? 'readonly' : '' %> required/><br/>
		</label>
		<br>
		<label>
			Course Name
			<input type="text" name="name" value="<%= ques.courseName || 'courseName' %>" required/><br/>
		</label>
		<br>
		<label>
			Credit
			<input type="number" name="credit" value="<%= ques.credit || 0 %>" required/><br/>
		</label>
		<br>
		<label>
			Course Details (PDF)
			<input type="file" name="pdf-file" <%= ques.filename ? '' : 'required' %> /><br/>
		</label>
		<br>
		<input type="text" name="_id" value="<%= ques._id || '' %>" hidden>
		<label>
			<input type="submit" />
		</label>
		<br>
	</form>

	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="/static/js/jquery-3.3.1.slim.min.js"></script>
	<script src="/static/js/popper.min.js"></script>
	<script src="/static/js/bootstrap.min.js"></script>
</body>

</html>
